# Configuration du serveur
PORT=3001
NODE_ENV=development

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=useful_tools_saas
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Secret (générer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# URLs
# FRONTEND_URL can be a single URL or multiple URLs separated by comma
# Example for production: FRONTEND_URL=https://your-app.vercel.app,http://localhost:3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Plans Stripe (à créer dans le dashboard Stripe)
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxx
STRIPE_PRICE_ID_PRO_YEARLY=price_xxx
STRIPE_PRICE_ID_ENTERPRISE_MONTHLY=price_xxx
STRIPE_PRICE_ID_ENTERPRISE_YEARLY=price_xxx

